---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Mostafa Kamal | Portfolio">
  <Header />
  
  <main class="max-w-5xl mx-auto px-6">
    <!-- Hero Section -->
    <section class="py-20 md:py-32 flex flex-col items-start gap-8">
      <h1 class="text-6xl md:text-9xl font-display font-bold uppercase tracking-tighter leading-[0.85]">
        Educate<span class="text-accent">.</span><br />
        Inspire<span class="text-accent">.</span><br />
        Connect<span class="text-accent">.</span>
      </h1>
      
      <div class="max-w-2xl">
        <p class="text-2xl md:text-3xl font-body leading-tight mb-12">
          I'm <span class="font-display font-bold uppercase underline decoration-accent decoration-4">Mostafa Kamal</span>. I build tools, write stories, and help people achieve more through technology and strategy.
        </p>
        
        <div class="flex flex-wrap gap-6">
          <a href="/projects" class="bg-black text-white px-10 py-5 font-display font-bold text-2xl uppercase tracking-widest hover:bg-accent transition-colors">
            View Projects
          </a>
          <a href="/about" class="border-4 border-black px-10 py-5 font-display font-bold text-2xl uppercase tracking-widest hover:bg-black hover:text-white transition-colors">
            SKILLS
          </a>
        </div>
      </div>
    </section>

    <!-- Brief Quote / Tagline -->
    <section class="py-24 text-center">
      <p class="font-display font-bold uppercase text-4xl md:text-6xl tracking-tighter leading-none opacity-20">
        Minimal Design. <span class="text-accent">Bold</span> Impact.
      </p>
    </section>
  </main>

  <Footer />
</Layout>
